<resources>
    <!-- Base application theme. -->
    <style name="Theme.Skillcinema" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" />

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.GreySlate">
        <item name="android:textColor">@color/grey_slate</item>
    </style>

    <style name="Text.GreyDim">
        <item name="android:textColor">@color/grey_dim</item>
    </style>

    <style name="Text.GreyDark">
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Text.GreySlate.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.White.6">
        <item name="android:textSize">@dimen/sp_6</item>
    </style>

    <style name="Text.GreyDark.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.GreyDark.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.GreyDark.32">
        <item name="android:textSize">@dimen/sp_32</item>
    </style>

    <style name="Text.GreyDim.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.GreyDark.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.Blue.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.GreyDark.18.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.White.6.GraphikMedium">
        <item name="android:fontFamily">@font/graphik_medium</item>
    </style>

    <style name="Text.GreyDark.14.GraphikRegular">
        <item name="android:fontFamily">@font/graphik_regular</item>
    </style>

    <style name="Text.GreyDim.12.GraphikRegular">
        <item name="android:fontFamily">@font/graphik_regular</item>
    </style>

    <style name="Text.Blue.14.GraphikMediumFont">
        <item name="android:fontFamily">@font/graphik_medium</item>
    </style>

    <style name="Text.GreyDark.18.Bold.GraphikSemiboldFont">
        <item name="android:fontFamily">@font/graphik_semibold</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.Alpha40">
        <item name="android:alpha">0.4</item>
    </style>

    <style name="RoundCorners" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RoundCorners.4" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerSizeBottomLeft">@dimen/dp_4</item>
        <item name="cornerSizeTopLeft">@dimen/dp_4</item>
        <item name="cornerSizeBottomRight">@dimen/dp_4</item>
        <item name="cornerSizeTopRight">@dimen/dp_4</item>
    </style>


</resources>
